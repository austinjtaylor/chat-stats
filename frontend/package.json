{
  "name": "ufa-stats-frontend",
  "version": "2.0.0",
  "description": "Ultimate Frisbee Statistics Frontend - Refactored with modular architecture",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "serve": "python3 -m http.server 8080",
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:js": "eslint \"js/**/*.{js,ts}\" \"*.{js,ts}\" \"stats/**/*.{js,ts}\" \"types/**/*.ts\"",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write \"**/*.{js,ts,css,html,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,html,json}\"",
    "generate-types": "cd .. && uv run python scripts/generate_types.py"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "json-schema-to-typescript": "^15.0.4",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.2.4",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    },
    "globals": {
      "DOM": "readonly",
      "Format": "readonly",
      "statsAPI": "readonly",
      "APIError": "readonly",
      "marked": "readonly",
      "Chart": "readonly"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": null,
      "custom-property-pattern": null,
      "no-descending-specificity": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "import"
          ]
        }
      ]
    }
  }
}
